@model ProductVM

@{
    ViewBag.PageTitle = "Product Managment";
    ViewData["CardTitle"] = "Edit Products";

}

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="product.Id" />
            <input type="hidden" asp-for="product.Img" />

            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" style="background-color:gainsboro" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <textarea id="myTextarea" asp-for="product.Description" class="form-control" style="background-color:gainsboro"></textarea>
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" style="background-color:gainsboro" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Img" class="control-label"></label>
                <input type="file" name="file" id="imgfile" class="form-control" style="background-color:gainsboro" />
            </div>
            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label"></label>
                <select asp-for="product.CategoryId" asp-items="Model.CategoryList" class="form-control">
                    <option disabled selected> --Selected List -- </option>
                </select>
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color:gainsboro;color:black" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="container">
            <img src="~/@Model.product.Img" width="300" height="300"/>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index" style="color:gray">Back to List</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: '#myTextarea',
            width: 350,  // Set the desired width in pixels
            height: 200
        });
    </script>
}
