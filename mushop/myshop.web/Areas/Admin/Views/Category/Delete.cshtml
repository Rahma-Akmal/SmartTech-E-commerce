@model Category

@{
    ViewBag.PageTitle = "Catgory Managment";
    ViewData["CardTitle"] = "Delete Categories";
  
}


<form asp-action="Del" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" disabled class="form-control" style="background-color:gainsboro" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" disabled class="form-control" style="background-color:gainsboro" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" style="background-color:gainsboro;color:black" />
    </div>
</form>


<div>
    <a asp-action="Index" style="color:gray">Back to List</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



